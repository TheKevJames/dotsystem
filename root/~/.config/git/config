[alias]
    amend = commit --amend
    branches = branch -a
    lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
    pre-commit-init = !cp ~/.config/git/pre-commit-config.yaml $(git rev-parse --show-toplevel)/.pre-commit-config.yaml
    remotes = remote -v
    sha = !git rev-parse HEAD | grep --color $(git rev-parse --short=0 HEAD)
    tags = tag -l --sort=version:refname

[advice]
    pushNonFastForward = false
    statusHints = false

[color]
    branch = auto
    diff = auto
    status = auto
    wtf = auto

[commit]
    gpgsign = true

[core]
    attributesfile = ~/.config/git/attributes
    editor = nvim
    excludesfile = ~/.config/git/ignore
    ignorecase = false
    pager = less -FRX

[credential]
    helper = cache --timeout=3600 --socket=~/.local/share/git/creds.sock

[diff]
    mnemonicprefix = true
    renames = copies
    tool = nvimdiff

[diff "pdf"]
    textconv = pdf2txt

[diff "plist"]
    textconv = plutil -convert xml1 -o -

[difftool]
    prompt = false

[difftool "nvimdiff"]
    cmd = "nvim -d \"$LOCAL\" \"$REMOTE\""

[difftool "vimdiff"]
    cmd = "vim -d \"$LOCAL\" \"$REMOTE\""

[fetch]
    prune = true

[merge]
    conflictstyle = diff3
    stat = true
    tool = nvimdiff

[mergetool "nvimdiff"]
    cmd = "nvim -d \"$LOCAL\" \"$REMOTE\""

[mergetool "vimdiff"]
    cmd = "vim -d \"$LOCAL\" \"$REMOTE\""

[pull]
    rebase = true

[push]
    default = current
    followTags = true

[rerere]
    enabled = true

[web]
    browser = google-chrome

[include]
    path = ~/.config/git/config-personal

[includeIf "gitdir:~/coding/talkiq/"]
    path = ~/.config/git/config-talkiq

[includeIf "gitdir:~/coding/dialpad:"]
    path = ~/.config/git/config-dialpad
