!Turn CapsLock into Ctrl-L
clear lock
clear control
keycode 66 = Control_L
add control = Control_L

!Disable NumLock
clear mod2
!add mod2 = Num_Lock
keysym KP_End = KP_1
keysym KP_Down = KP_2
keysym KP_Next = KP_3
keysym KP_Left = KP_4
keysym KP_Begin = KP_5
keysym KP_Right = KP_6
keysym KP_Home = KP_7
keysym KP_Up = KP_8
keysym KP_Prior = KP_9
keysym KP_Insert = KP_0
keysym KP_Delete = KP_Decimal
