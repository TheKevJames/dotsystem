#!/usr/bin/env bash
set -euo pipefail

NAME="${1:-}"

while getopts 'n:' flag; do
  case "${flag}" in
    n) NAME="${OPTARG}"                  ;;
    *) echo "Unexpected option ${flag}";
       exit 1                            ;;
  esac
done

[[ -z "${NAME}" ]] && { echo "NAME is unset"; exit 1; }

PATCH='{\"spec\":{\"template\":{\"metadata\":{\"annotations\":{\"date\":\"'$(date +'%s')'\"}}}}}'
kubectl patch deployment "${NAME}" -p "\"${PATCH}\""
# kubectl patch deployment decoder -p '{"spec":{"template":{"metadata":{"annotations":{"date":"'$(date +'%s')'"}}}}}'
