#!/usr/bin/env bash
# WINEPREFIX=~/.PlayOnLinux/wineprefix/LeagueOfLegends ~/.PlayOnLinux/wine/linux-amd64/1.9.22/bin/wine ~/.PlayOnLinux/wineprefix/LeagueOfLegends/drive_c/Riot\ Games/League\ of\ Legends/LeagueClient.exe --no-sandbox 2>&1 | grep err
function kill_league {
    pkill -f eague
}

trap kill_league EXIT

cd ~/.PlayOnLinux/wineprefix/LeagueOfLegends

export WINEPREFIX=~/.PlayOnLinux/wineprefix/LeagueOfLegends
~/.PlayOnLinux/wine/linux-amd64/1.9.22/bin/wine drive_c/Riot\ Games/League\ of\ Legends/LeagueClient.exe --no-sandbox 2>&1 | grep err
