#!/usr/bin/env bash
set -euo pipefail
VENV="${XDG_DATA_HOME}/venv/gcalcli"

[[ -d "${VENV}" ]] || virtualenv -p python2 "${VENV}"
cd "${VENV}"
# fuck py2
set +euo pipefail
source ./bin/activate
set -euo pipefail

[[ -f ./bin/gcalcli ]] || python2 -m pip install gcalcli vobject parsedatetime
./bin/gcalcli "$@"
