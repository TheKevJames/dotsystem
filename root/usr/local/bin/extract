#!/usr/bin/env bash
for file in "$@"; do
    if [[ -f $file ]]; then
        case $file in
            *.7z)         7za e $file                      ;;
            *.tar.bz2)    tar xjf $file                    ;;
            *.bz2)        bunzip2 $file                    ;;
            *.tar.gz)     tar xzf $file                    ;;
            *.gz)         gunzip $file                     ;;
            *.pax)        cat $1 | pax -r                  ;;
            *.pax.Z)      uncompress $1 --stdout | pax -r  ;;
            *.rar)        unrar x $file                    ;;
            *.tar)        tar xf $file                     ;;
            *.tar.xz)     tar xJf $file                    ;;
            *.tbz2)       tar xjf $file                    ;;
            *.tgz)        tar xzf $file                    ;;
            *.Z)          uncompress $file                 ;;
            *.zip)        unzip $file                      ;;
            *.ZIP)        unzip $file                      ;;
            *)            echo "'$file' is an unrecognized or unextractable format." ;;
        esac
    else
        echo "'$file' does not exist."
    fi
done
